			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"user_id\": \"{{user_id_2}}\",\n    \"category_id\": \"{{cat_private_id}}\",\n    \"amount\": 500.00\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": {
					"raw": "{{base_url}}/record",
					"host": ["{{base_url}}"],
					"path": ["record"]
