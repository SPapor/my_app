		{
			"name": "Create_global_category",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.environment.set(\"cat_global_id\", jsonData.id);",
							"pm.test(\"Global category has null user_id\", function () { pm.expect(jsonData.user_id).to.be.null; });"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Global Food\",\n    \"is_global\": true,\n    \"user_id\": null\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": {
					"raw": "{{base_url}}/category",
					"host": ["{{base_url}}"],
					"path": ["category"]
				}
			}
		},
		{
			"name": "Create_private_category",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.environment.set(\"cat_private_id\", jsonData.id);",
							"pm.test(\"Private category belongs to Alice\", function () { pm.expect(jsonData.user_id).to.eql(pm.environment.get(\"user_id_1\")); });"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Alice Secret Stash\",\n    \"is_global\": false,\n    \"user_id\": \"{{user_id_1}}\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": {
					"raw": "{{base_url}}/category",
					"host": ["{{base_url}}"],
					"path": ["category"]
				}
			}
		},
		{
			"name": "Get Categories",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/category?user_id={{user_id_1}}",
					"host": ["{{base_url}}"],
					"path": ["category"],
					"query": [
						{ "key": "user_id", "value": "{{user_id_1}}" }
					]
				},
				"description": "Should return both Global and Alice's private categories."
			}
		},
