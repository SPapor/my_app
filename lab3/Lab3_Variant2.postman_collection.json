	"item": [
		{
			"name": "Create User1",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.environment.set(\"user_id_1\", jsonData.id);",
							"pm.test(\"Status is 201\", function () { pm.response.to.have.status(201); });"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Alice\"\n}",
					"options": { "raw": { "language": "json" } }
				},
				"url": {
					"raw": "{{base_url}}/user",
					"host": ["{{base_url}}"],
					"path": ["user"]
				}
			}
		},
		{
			"name": "Create User2",
